{
  "name": "deploy-automatico",
  "displayName": "Deploy Automático v2",
  "description": "Automatize build e deploy de aplicações React com GitHub Actions para Vercel",
  "version": "2.0.0",
  "publisher": "ryantirabassi",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "deploy",
    "ci-cd",
    "github-actions",
    "vercel",
    "react",
    "automation"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:deploy-extension.deploy"
  ],
  "contributes": {
    "commands": [
      {
        "command": "deploy-extension.deploy",
        "title": "Deploy Automático v2",
        "category": "Deploy",
        "icon": "$(rocket)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "deploy-extension.deploy",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --platform=node --target=node16",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RyanTirabassi/Deploy_ProjetoIntegrador.git"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.17.11",
    "eslint": "^8.40.0",
    "typescript": "^5.0.2"
  }
}
